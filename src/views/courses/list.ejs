<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Listado de Cursos</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('../partials/header') %>

  <div class="container">
    <h1>Listado de Cursos</h1>

    <% if (typeof flash !== 'undefined' && flash) { %>
      <div class="flash <%= flash.type %>"><%= flash.message %></div>
    <% } %>

    <% if (user && user.rol === 'profesor') { %>
      <p><a href="/courses/create" class="btn btn-primary">+ Crear nuevo curso</a></p>
    <% } %>

    <% if (cursos.length === 0) { %>
      <p>No hay cursos registrados aún.</p>
    <% } else { %>
      <ul>
        <% cursos.forEach(curso => { %>
          <li>
            <h3><a href="/courses/<%= curso._id %>"><%= curso.titulo %></a></h3>
            <p><%= curso.descripcion %></p>
            <small>Profesor: <%= curso.profesor ? curso.profesor.nombre : 'Desconocido' %></small>

            <% if (typeof user !== 'undefined' && user && user.rol === 'estudiante') { %>
              <% const isEnrolled = typeof enrolledIds !== 'undefined' && enrolledIds.includes(curso._id.toString()); %>
              <% if (!isEnrolled) { %>
                <form action="/enroll/<%= curso._id %>" method="POST" style="margin-top:10px; display:inline-block;">
                  <button type="submit">Inscribirme</button>
                </form>
              <% } else { %>
                <span style="margin-left:10px; font-weight:600; color:#006400">Inscrito</span>
              <% } %>
            <% } %>

            <% if (user && (user.rol === 'admin' || (curso.profesor && curso.profesor._id && curso.profesor._id.toString() === user._id))) { %>
              |
              <a href="/courses/<%= curso._id %>/edit">Editar</a>
              |
              <form action="/courses/<%= curso._id %>/delete" method="POST" style="display:inline">
                <button type="submit" onclick="return confirm('¿Eliminar este curso?')">Eliminar</button>
              </form>
            <% } %>
          </li>
          <hr>
        <% }) %>
      </ul>
    <% } %>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
